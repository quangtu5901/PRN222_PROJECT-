@{
    ViewData["Title"] = "Tổng quan";
    ViewData["ShowSidebar"] = true; // Hiển thị sidebar
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang quản trị</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            width: 250px;
            background: #222;
            color: white;
            position: fixed;
            height: 100vh;
            padding: 15px;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 10px;
                border-radius: 5px;
            }

                .sidebar a:hover {
                    background: #444;
                }

        .content {
            margin-left: 270px;
            padding: 20px;
        }

        .card {
            border: none;
            color: white;
            text-align: center;
        }

            .card i {
                font-size: 40px;
                margin-bottom: 10px;
            }

        .card-orange {
            background: #f39c12;
        }

        .card-blue {
            background: #3498db;
        }

        .card-green {
            background: #27ae60;
        }

        .card-red {
            background: #e74c3c;
        }
    </style>
</head>
<body>
    
 
    <!-- Nội dung chính -->
    <div class="content">
        <h2>Tổng quan hệ thống quản lý</h2>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card card-orange p-3">
                    <i class="fas fa-users"></i>
                    <h3>12</h3>
                    <p>Tổng số nhân viên</p>
                    <a href="#" class="btn btn-light btn-sm">Xem chi tiết</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card card-blue p-3">
                    <i class="fas fa-money-bill"></i>
                    <h3>12</h3>
                    <p>Tổng số bảng lương</p>
                    <p>Tạm tính: 55,058,600 VNĐ</p>
                    <a href="#" class="btn btn-light btn-sm">Chi tiết</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card card-green p-3">
                    <i class="fas fa-building"></i>
                    <h3>5</h3>
                    <p>Tổng số phòng ban</p>
                    <a href="#" class="btn btn-light btn-sm">Xem phòng ban</a>
                </div>
            </div>

            <div class="col-md-3">
                <div class="card card-red p-3">
                    <i class="fas fa-life-ring"></i>
                    <h3>3</h3>
                    <p>Khen thưởng</p>
                    <a href="#" class="btn btn-light btn-sm">Chi tiết</a>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
