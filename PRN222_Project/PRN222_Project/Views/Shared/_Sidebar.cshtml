@{
    var userId = User.FindFirst("UserId")?.Value;
}
<div class="sidebar">
    <h4 class="text-center text-light py-3 border-bottom">📋 Menu</h4>
    <ul class="nav flex-column">
        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">🏠 Tổng quan</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">👥 Quản lý Nhân Viên</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Details" asp-route-id="@userId">🧑‍💼 Hồ Sơ</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Salary" asp-action="Index">💰 Quản lý Lương</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="Index">⏳ Bảng chấm công</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Notification" asp-action="Index">🔔 Thông báo</a></li>
    </ul>
</div>

<style>
    .sidebar {
        width: 250px;
        background: #222;
        color: white;
        position: fixed;
        top: 56px; /* Cố định từ header */
        left: 0;
        bottom: 0; /* Giúp sidebar kéo dài đến footer */
        height: calc(100vh - 56px); /* Đảm bảo chiều cao đúng */
        display: flex;
        flex-direction: column;
        overflow-y: auto; /* Cuộn khi nội dung dài */
        padding-top: 0; /* Bỏ padding nếu cần */
        padding-bottom: 0; /* Bỏ padding nếu cần */
        z-index: 1000;
    }

    /* Đảm bảo sidebar không bị đè footer */
    .main-container {
        display: flex;
        min-height: calc(100vh - 56px); /* Chiều cao từ header đến footer */
    }

    /* Điều chỉnh nội dung để không bị sidebar che */
    .content {
        flex: 1;
        margin-left: 260px;
        padding: 20px;
        overflow-y: auto;
    }

    /* Footer không bị che */
    .footer {
        margin-left: 260px;
        text-align: center;
        padding: 10px;
        background: #f8f9fa;
        position: relative;
        z-index: 10;
    }

</style>