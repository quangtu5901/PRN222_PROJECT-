@model PRN222_Project.Models.User

<h2>Thêm Nhân Viên</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="FullName" class="form-control" required placeholder="Nhập họ tên" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" type="email" required placeholder="Nhập email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mật khẩu</label>
        <input asp-for="Password" class="form-control" type="password" required placeholder="Nhập mật khẩu" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <select asp-for="Gender" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option value="Male">Nam</option>
            <option value="Female">Nữ</option>
        </select>
    </div>

    <div class="form-group">
        <label>Phòng ban</label>
        <select asp-for="DepartmentId" class="form-control">
            <option value="">-- Chọn phòng ban --</option>
            @foreach (var dept in ViewBag.Departments)
            {
                <option value="@dept.Id">@dept.DepartmentName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Chức vụ</label>
        <select asp-for="PositionId" class="form-control">
            <option value="">-- Chọn chức vụ --</option>
            @foreach (var pos in ViewBag.Positions)
            {
                <option value="@pos.Id">@pos.PositionName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Mức lương</label>
        <select asp-for="SalaryLevelId" class="form-control">
            <option value="">-- Chọn mức lương --</option>
            @foreach (var salary in ViewBag.SalaryLevels)
            {
                <option value="@salary.Id">@salary.Level - @salary.MonthlySalary VNĐ</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Quyền</label>
        <select asp-for="RoleId" class="form-control">
            <option value="">-- Chọn quyền --</option>
            @foreach (var role in ViewBag.Roles)
            {
                <option value="@role.Id">@role.RoleName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Loại nhân viên</label>
        <input asp-for="EmploymentType" class="form-control" required placeholder="Nhập loại nhân viên" />
        <span asp-validation-for="EmploymentType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="Active">Đang làm việc</option>
            <option value="Inactive">Nghỉ việc</option>
        </select>
    </div>

    <div class="form-group">
        <label>Ảnh đại diện</label>
        <input type="file" name="AvatarFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a asp-action="Index" class="btn btn-danger">Hủy</a>
</form>
